{
  "manifest_version": 3,
  "name": "Ultimate Web Toolkit - 50+ Tools",
  "version": "1.0.0",
  "description": "Professional toolkit with 50+ features including dark mode, fonts, filters, productivity tools, and more!",
  "icons": {
    "128": "icon.png" 
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
