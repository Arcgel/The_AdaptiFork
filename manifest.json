{
 "manifest_version": 3,
  "name": "Modular Accessibility Hub (Toolbar Popup)",
  "version": "1.2",
  "description": "A highly customizable toolbar popup for web accessibility features, built with modular definitions and Tailwind CSS.",
  "icons": {
    "128": "icon.png" 
  },
  "permissions": [
    "storage"
  ],
 "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
